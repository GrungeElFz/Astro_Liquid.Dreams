---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'Liquid Dreams Volume 03',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get tickets',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:ticket',
      },
      { text: 'Lineups', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/Logo_LiquidDreams_ringOnly_compressed.png',
      alt: 'Liquid Dreams',
    }}
  >
    <Fragment slot="title">
      Liquid Dreams
      <span class="text-accent dark:text-white highlight"> Volume 03</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span>Saturday, September 14, 2024</span>
      <br />
      <span>Urbana, Illinois</span>
    </Fragment>
  </Hero>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    tagline="Get Ticket"
    title="TIER 1 Pass is opening !"
    subtitle="Limited availability <br> Must be 19+ to enter <br><br> Tier 1: $10 <br> Tier 2: $12 <br> Tier 3: $15 <br> Doors: $15"
    actions={[
      {
        variant: 'primary',
        text: 'Venmo',
        href: 'https://venmo.com/liquiddreamscu',
        icon: 'tabler:square-rounded-letter-v',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Payment Instructions"
    items={[
      {
        title: 'Step 1: Submit your payment through Venmo</span>',
        description: '@liquiddreamscu (4 digits verification code: 1795)',
        icon: 'tabler:square-rounded-letter-v',
      },
      {
        title: 'Step 2: Submit your information ',
        description:
          'In the “What is it for?” section, include the full name and email address of the attendee. One name allowed per transaction.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Step 3: Confirmation',
        description:
          'After we receive your payment, you will get a confirmation email from us on Thursday, September 12th (09/12/2024) with the event details.',
        icon: 'tabler:ticket',
      },
      {
        title: 'Step 4: Get ready to dance!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/QR_LiquidDreams_VenmoQRC.jpg',
      alt: '@liquiddreamscu Venmo QR Code',
    }}
  />
</Layout>
