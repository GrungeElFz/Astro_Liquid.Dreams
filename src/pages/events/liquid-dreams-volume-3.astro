---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'Liquid Dreams Volume 03',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get tickets',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:ticket',
      },
      { text: 'Lineups', href: '#features' },
    ]}
    image={{ src: '~/assets/images/Logo_LiquidDreams_ringOnly_compressed.png', alt: 'Liquid Dreams' }}
  >
    <Fragment slot="title">
      Liquid Dreams
      <span class="text-accent dark:text-white highlight"> Volume 03</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span>Saturday, September 14, 2024</span>
      <br>
      <span>Urbana, Illinois</span>
    </Fragment>
  </Hero>

  <!-- <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these demo pages. You will see them very soon. Stay tuned Stay tuned!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  /> -->

  <!-- Steps Widget ****************** -->

  <Steps
    title="Payment Instructions"
    items={[
      {
        title: 'Step 1: Submit your payment through Venmo</span>',
        description: '@liquiddreamscu (4 digits verification code: 1795)',
        icon: 'tabler:square-rounded-letter-v',
      },
      {
        title: 'Step 2: Submit your information ',
        description:
          'In the “What is it for?” section, include the full name and email address of the attendee. One name allowed per transaction.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Step 3: Confirmation',
        description:
          'After we receive your payment, you will get a confirmation email from us on Thursday, September 12th (09/12/2024) with the event details.',
        icon: 'tabler:ticket',
      },
      {
        title: 'Step 4: Get ready to dance!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/QR_LiquidDreams_VenmoQRC.jpg',
      alt: '@liquiddreamscu Venmo QR Code',
    }}
  />
</Layout>
