---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Liquid Dreams Volume 03',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get tickets',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:ticket',
      },
      { text: 'Lineups', href: '#features' },
    ]}
    image={{ src: '~/assets/images/Logo_LiquidDreams_ringOnly_compressed.png', alt: 'Liquid Dreams' }}
  >
    <Fragment slot="title">
      Liquid Dreams
      <span class="text-accent dark:text-white highlight"> Volume 03</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span>Saturday, September 14, 2024</span>
      <br>
      <span>Urbana, Illinois</span>
    </Fragment>
  </Hero>

